// ******  responsive  ********
@media screen and (min-width: 768px)
	body
		header
		//  ***** Menu Mobile global *****	
			#menuMobile
				display none
		//  ***** Menu normal global *****
			#menuNormal
				background rgba(gris_claro, 0)
				display inline-block
				height 40px
				margin 0
				margin-right -1.5em
				position absolute
				right 1.5em
				top 0
				width 70%
				ul
					float right
					height 40px
					width 340px				
					li		
						display inline-block
						margin 0
						max-width 110px
						padding  0
						position relative
						&:before
							border-right 1px solid salmon
							content ""
							height 1.5em
							position absolute
							right 0
							top 7px
						&:last-child:before
							content none
						a
							padding 0.74em 0							
			//  ------  Section Pagina inicio ------
			.inicio
			//  ------  Section Mi Perfil ------
			.miperfil
				padding 0
				margin 0
				.hv
					border-radius 0px
					margin 1em 0
				.masinfo
					display inline-block
					margin  0 0.4em 0 0
					width 49%
					&:nth-child(odd)
						margin-right 0
					.imgPerfil
						background salmon
						background-image url(../img/imgmiperfil.png)
						background-position center center
						background-repeat no-repeat		
						background-size cover
						height 260px
						width 100%
					.opciones
						background rgba(gris_claro, 0.3)
						border-radius 3px
						color azul_texto
						display inline-block
						min-height 260px
						.btnNaran
							max-width 100%
							
					
			//  ------  Section Portafolio ------			
		.portafolio
			.muestra
				width 46%
				margin 0 0 2% 2%
				display inline-block
				vertical-align top
				&:nth-child(odd)
					margin-right 1%
			//  ------  Section Contact0 ------	
		.contacto
			h2, p
				text-align center
			h2 
				text-align center
						
